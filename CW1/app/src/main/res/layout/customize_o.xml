<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#090909"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customize_o">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blackk"
        android:padding="20dp"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/pizzaImageView"
            android:layout_width="411dp"
            android:layout_height="152dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:scaleType="fitXY"
            android:src="@drawable/createownpizza" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crust (Base)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:padding="4dp" />

        <Spinner
            android:id="@+id/crustSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spinner_white_background"
            android:popupBackground="@drawable/spinner_popup_white_background"
            android:textColor="#000000"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:padding="4dp" />

        <Spinner
            android:id="@+id/sizeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spinner_white_background"
            android:popupBackground="@drawable/spinner_popup_white_background"
            android:textColor="#000000"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sauce"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:padding="4dp" />

        <Spinner
            android:id="@+id/sauceSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spinner_white_background"
            android:popupBackground="@drawable/spinner_popup_white_background"
            android:textColor="#000000"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cheese"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:padding="4dp" />

        <Spinner
            android:id="@+id/cheeseSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spinner_white_background"
            android:popupBackground="@drawable/spinner_popup_white_background"
            android:textColor="#000000"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vegetable Toppings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_section_background"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/onionsCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onions"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/bellPeppersCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bell Peppers"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/mushroomsCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mushrooms"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/olivesCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Olives"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/cornCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corn"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/jalapenosCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JalapeÃ±os"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/spinachCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spinach"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non-Vegetable Toppings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_section_background"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/pepperoniCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pepperoni"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/chickenCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chicken"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/baconCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bacon"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/sausageCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sausage"
                android:textColor="@color/white" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addToCartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:elevation="4dp" />

    </LinearLayout>

</ScrollView>