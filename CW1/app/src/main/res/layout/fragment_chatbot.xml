<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#090909">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#1a1a1a">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chat"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:backgroundTint="#FF6B35" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza Mania Assistant"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ask me about our menu and your orders!"
                android:textColor="#CCCCCC"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnClearChat"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_clear"
            android:background="@drawable/circle_background"
            android:padding="6dp"
            android:backgroundTint="#333333"
            android:contentDescription="Clear chat" />

    </LinearLayout>

    <!-- Chat Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Quick Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#1a1a1a">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Menu"
            android:textColor="@color/white"
            app:chipBackgroundColor="#FF6B35"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Orders"
            android:textColor="@color/white"
            app:chipBackgroundColor="#FF6B35"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="@color/white"
            app:chipBackgroundColor="#FF6B35" />

    </LinearLayout>

    <!-- Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#1a1a1a"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:hint="Ask me anything..."
            android:textColor="@color/white"
            android:textColorHint="#999999"
            android:maxLines="3"
            android:inputType="textCapSentences|textMultiLine" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_send"
            app:backgroundTint="#FF6B35"
            app:tint="@color/white"
            app:fabSize="mini" />

    </LinearLayout>

</LinearLayout>
