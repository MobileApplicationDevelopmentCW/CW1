<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.PolicyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="35dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:tint="#D23913"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Page Title -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy and Policy"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/backBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>

        <!-- Lottie Animation below the title -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="408dp"
            android:layout_height="207dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pageTitle"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/policy" />


        <!-- Topic 1 -->
        <TextView
            android:id="@+id/topic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account &amp; Profile"
            android:textColor="#D23913"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/backBtn"
            android:layout_marginTop="250dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/content1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="We collect your name, email, phone, and delivery address to create your account, personalize your experience, and process orders."
            android:textColor="@color/black"
            android:textSize="10sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/topic1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Topic 2 -->
        <TextView
            android:id="@+id/topic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orders &amp; Tracking"
            android:textColor="#D23913"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/content1"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/content2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Your order details, including items, delivery address, and status, are used only to process and deliver your orders."
            android:textColor="@color/black"
            android:textSize="10sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/topic2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Topic 3 -->
        <TextView
            android:id="@+id/topic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payments"
            android:textColor="#D23913"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/content2"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/content3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Payments are handled securely through trusted gateways. We do not store card details on our servers."
            android:textColor="@color/black"
            android:textSize="10sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/topic3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Topic 4 -->
        <TextView
            android:id="@+id/topic4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="#D23913"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/content3"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/content4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="We may send updates about your orders, promotions, or important announcements. You can manage notifications in your settings."
            android:textColor="@color/black"
            android:textSize="10sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/topic4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Topic 5 -->
        <TextView
            android:id="@+id/topic5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security &amp; Feedback"
            android:textColor="#D23913"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/content4"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/content5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="We use industry-standard security measures to protect your data. Please keep your login credentials secure. Contact support at 0112345678 or Hotline 1800-PIZZA (74992) for feedback."
            android:textColor="@color/black"
            android:textSize="10sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/topic5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>