<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:layout_margin="8dp"
    android:clickable="false"
    android:focusable="false"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="14dp"
        android:clickable="false"
        android:focusable="false" >

        <!-- Remove/X button (top right) -->
        <ImageButton
            android:id="@+id/removeBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/close"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:contentDescription="Remove item"
            />

        <!-- Product Image (left) -->
        <ImageView
            android:id="@+id/cartItemImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/margherita"
            android:background="@drawable/image_bg"
            android:clipToOutline="true"/>

        <!-- Item Name and Prices (middle) -->
        <LinearLayout
            android:id="@+id/cartItemDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/cartItemImage"
            android:layout_toStartOf="@id/quantityLayout"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            android:focusable="false">

            <TextView
                android:id="@+id/cartItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BBQ Pizza"
                android:textSize="16sp"
                android:textColor="#222222"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/cartItemUnitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs0"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/cartItemTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs0"
                android:textSize="15sp"
                android:textColor="#CF8F0E"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <!-- Quantity controls (right, vertically centered) -->
        <LinearLayout
            android:id="@+id/quantityLayout"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_qty_bg"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <ImageButton
                android:id="@+id/minusBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_remove_24"
                android:background="@drawable/qnty_btn_bg"
                android:contentDescription="@string/cd_decrease_quantity"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:tint="#222222" />

            <TextView
                android:id="@+id/itemQty"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:textColor="#333"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/plusBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_add_24"
                android:background="@drawable/qnty_btn_bg"
                android:contentDescription="@string/cd_increase_quantity"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:tint="#222222" />
        </LinearLayout>



    </RelativeLayout>
</androidx.cardview.widget.CardView>
